  <nav class="top-bar">
    <ul class="title-area">
      <!-- Title Area -->
      <li class="name">
        <h1><%= link_to "Schoolbox", root_path %></a></h1>
      </li>
      <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">
      <!-- Left Nav Section -->
      <ul class="left">
        <li class="divider"></li>
        <li class="active"><a href="<%= root_path %>">Home</a></li>
        <li class="divider"></li>
        <% if @auth.is_a?(Teacher) %>
          <%== teacher_nav %>
        <% elsif @auth.present? %>
          <li><%= link_to "My Courses", courses_path %></li>
        <% end %>
        <li class="divider"></li>
        <% if @auth.nil? %>
          <li class='has-dropdown'><a href="">Register</a>
            <ul class='dropdown'>
              <li><%= link_to "New Teacher", new_teacher_path %>
              <li><%= link_to "New Student", new_student_path %>
            </ul>
          </li>
        <% else %>
          <li><a href="">Hello, <%= @auth.name %></a></li>
          <li class="divider"></li>
        <% end %>

      </ul>

      <!-- Right Nav Section -->
      <ul class="right">
        <li class="divider hide-for-small"></li>
        <li class="has-dropdown">
          <% if @auth.present? %>
            <%= link_to @auth.email %>
          <% end %>
          <ul class="dropdown">
            <% if @auth.present? %>
              <%== teacher_settings_nav %>
              <li class="divider"></li>

            <% end %>
          </ul>
        </li>
        <li class="divider"></li>
        <li class="divider show-for-small"></li>
        <li class="has-form">
          <% if @auth.present? %>
            <%= link_to "Logout", login_path, :method=>'delete', :id=>'login_btn' %>
          <% else %>
            <%= link_to "Login", login_path, :remote=>true, :id=>'login_btn' %>
          <% end %>
        </li>
      </ul>
    </section>
</nav>

<div id='login_btn_nav'></div>

