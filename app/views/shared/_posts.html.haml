- @auth.klasses.each_with_index do |klass, i|
  %h6= "#{klass.course.name}, Period #{klass.period}"
  - klass.posts.order(:created_at).reverse.each do |post|
    .post
      .title= post.title
      .tagline= "Posted for #{klass.course.name} on #{format_date(post.created_at)}"
      .message= post.message
      .comments_count
        = pluralize(post.comments.count, 'comment')
        %span.comments_links{:id=>"post_comments_#{post.id}",:style=>"color:blue;cursor:pointer;display:inline-block;"}= "View Comments"
        - if @auth.is_a?(Teacher)
          %span.new_post_link{:display=>'inline-block',:style=>"color:blue;cursor:pointer;display:inline-block;"} | New Post
        - else
          %span.new_comment_btn{:display=>'inline-block',:style=>"color:blue;cursor:pointer;display:inline-block;"} | New Comment
      .comments{:id=>post.id}
        - post.comments.each do |comment|
          .comment
            = comment.text
            .tagline= "Posted by #{comment.student.name} on #{format_date(comment.created_at)}"
      %br
      .comments_form
        - if @auth.is_a?(Student)
          = render(:partial=>'comments/form', :locals=>{:post=>post, :student=>@auth,:comment=>@comment})

  - if klass.posts.empty?
    .noposts There are no posts for this course.
    %br

- if @auth.is_a?(Teacher)
  #post_form
    = render :partial=>'posts/form'
