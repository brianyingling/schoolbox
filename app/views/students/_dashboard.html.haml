.container
  %br
  .row{:style=>'background:#fff;'}
    .large-12.columns
      %h3= "Welcome, #{@student.first_name} #{@student.last_name}"
  .row{:style=>'background:#fff;'}
    .large-3.columns
      %h4 My Courses
      - @student.klasses.each do |klass|
        .course_name= link_to klass.course.name, klass.course
    .large-9.columns
      %h4 Course Posts
      - @student.klasses.each do |klass|
        .course
          %h4= klass.course.name
          - klass.posts.each do |post|
            .post
              %h5= post.title
              %div= post.message
              #comments
                - post.comments.each do |comment|
                  .comment
                    .comment_text= comment.text
                    .timestamp= "Posted by #{comment.student.name} on #{comment.created_at.to_datetime.strftime('%A, %B %d %Y')}"
                    - if @auth.id == comment.student.id
                      =link_to 'Edit', edit_comment_path(comment), :class=>'button radius tiny'
                      =link_to 'Delete', comment, :method=>'delete', :class=>'button radius tiny alert'

                = form_tag new_comment_path, :method=>'get' do
                  = hidden_field_tag "post_id", post.id
                  = hidden_field_tag "student_id", @student.id
                  = button_to "New Comment", new_comment_path, :class=>'button radius tiny new_comment_btn', :value=>post.id, :remote=>true
