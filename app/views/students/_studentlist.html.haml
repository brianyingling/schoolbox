%table#students
  %thead
    %tr
      %td Add Student
      %td First Name
      %td Last Name
      %td Email
      %td Gender
      %td Username
      %td Address
  %tbody
    - @students.each do |student|
      %tr
        %td= check_box_tag("student_ids[]", student.id) if @klass.present? && !@klass.students.exists?(student)
        %td= student.first_name
        %td= student.last_name
        %td= student.email
        %td= student.gender
        %td= student.username
        %td= student.address
/ = select_tag @auth.klasses.map(&:course).map(&:name).join(', ') if @auth.is_a?(Teacher)
