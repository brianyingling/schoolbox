.row
  .large-12.columns
    %h3 My Posts
    .posts
      binding.pry
      - @auth.posts.each do |post|
        .post
          %h5= post.title
          .post_meta= format_date(post.created_at)
          .edit_area= post.message
          = hidden_field_tag @auth.id
          = button_tag "Edit", nil
          = link_to "Delete", post, :method=>'delete', :class=>'button', :confirm=>'Are you sure?'
        - post.comments.each do |comment|
          .comment
            %h6= comment.text
            %p= "Posted by #{comment.student.first_name} #{comment.student.last_name}"
            %p= comment.created_at
