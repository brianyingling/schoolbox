.container
  %br
  .row{:style=>'background:#fff;opacity:0.9;border-radius:15px;'}
    .large-12.columns
      %h4= "Student Roster for #{@klass.course.name}"
      %h5= "Period #{@klass.period}"
      %h5= "Current Class Average: #{@klass.total_average}"
  .row{:style=>'background:#fff;opacity:0.9;'}
    .large-12.columns
      %table
        %tr
          %td First Name
          %td Last Name
          %td Gender
          %td Address
          %td Email
        - @klass.students.each do |student|
          %tr
            %td= link_to student.first_name, student
            %td= link_to student.last_name, student
            %td= student.gender
            %td= student.address
            %td= student.email
